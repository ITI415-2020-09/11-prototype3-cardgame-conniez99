<xml>
	<!-- This file holds info for laying out the Prospector card game. -->
	
	<!-- The multiplier is multiplied by the x and y attributes below. -->
	<!-- This determines how loose or tight the layout is. --> 
	<multiplier x="1.25" y="1.5" />
	
	<!-- In the XML below, id is the number of the card -->
	<!-- x and y set position -->
	<!-- faceup is 1 if the card is face-up -->
	<!-- layer sets the depth layer so cards overlap properly -->
	<!-- hiddenby is the ids of cards that keep a card face-down -->
	
	<!-- Layer0, the deepest cards. -->
	<slot id="1" x="0"  y="4" faceup="1" layer="0" hiddenby="5,6" />
	
	<!-- Layer1, the second level. -->
	<slot id="2" x="-1" y="3.25" faceup="1" layer="1" hiddenby="12,13" />
	<slot id="3" x="1"  y="3.25" faceup="1" layer="1" hiddenby="13,14" />

	
	
	<!-- Layer2, the third level. -->
	<slot id="4" x="-2" y="2.5" faceup="1" layer="2" hiddenby="21,22" />
	<slot id="5" x="0"  y="2.5" faceup="1" layer="2" hiddenby="22,23" />
	<slot id="6" x="2"  y="2.5" faceup="1" layer="2" hiddenby="23,24" />
	
	
	<!-- Layer3, the fourth level. -->
	<slot id="7" x="-3" y="1.75" faceup="1" layer="3" />
	<slot id="8" x="-1" y="1.75" faceup="1" layer="3" />
	<slot id="9" x="1"  y="1.75" faceup="1" layer="3" />
	<slot id="10" x="3"  y="1.75" faceup="1" layer="3" />


	<!-- Layer3, the fifth level. -->
	<slot id="11" x="-4" y="1" faceup="1" layer="4" />
	<slot id="12" x="-2" y="1" faceup="1" layer="4" />
	<slot id="13" x="0" y="1" faceup="1" layer="4" />
	<slot id="14" x="2"  y="1" faceup="1" layer="4" />
	<slot id="15" x="4"  y="1" faceup="1" layer="4" />
	

	<!-- Layer3, the sixth level. -->
	<slot id="16" x="-5" y="0.25" faceup="1" layer="5" />
	<slot id="18" x="-3" y="0.25" faceup="1" layer="5" />
	<slot id="19" x="-1" y="0.25" faceup="1" layer="5" />
	<slot id="20" x="1"  y="0.25" faceup="1" layer="5" />
	<slot id="21" x="3"  y="0.25" faceup="1" layer="5" />
	<slot id="22" x="5"  y="0.25" faceup="1" layer="5" />
	

	<!-- Layer3, the sixth level. -->
	<slot id="16" x="-6" y="-0.5" faceup="1" layer="6" />
	<slot id="18" x="-4" y="-0.5" faceup="1" layer="6" />
	<slot id="19" x="-2" y="-0.5" faceup="1" layer="6" />
	<slot id="19" x="0" y="-0.5" faceup="1" layer="6" />
	<slot id="20" x="2"  y="-0.5" faceup="1" layer="6" />
	<slot id="21" x="4"  y="-0.5" faceup="1" layer="6" />
	<slot id="22" x="6"  y="-0.5" faceup="1" layer="6" />
	
	
	<!-- This positions the draw pile and staggers it -->
	<slot type="drawpile" x="2" y="-5" xstagger="0.15" layer="4"/>
	
	<!-- This positions the discard pile and target card -->
	<slot type="discardpile" x="-3" y="-5" layer="5"/>
	
</xml>
	